{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "ES6", "ES7", "ES2015", "ES2017"],
    "target": "es2018",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "types": ["@types/jest", "node", "styled-components-react-native"],
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
